<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:controls="com.github.izerui.file.controls.*"
               minWidth="800" minHeight="600"
               preloader="mx.preloaders.DownloadProgressBar"
               backgroundColor="#3b707e" creationComplete="application1_creationCompleteHandler(event)">
    <fx:Metadata>
        [ResourceBundle("jhaij")]
    </fx:Metadata>

    <fx:Script>
		<![CDATA[
        import mx.events.FlexEvent;
        import mx.managers.BrowserManager;

        protected function application1_creationCompleteHandler(event:FlexEvent):void {
            BrowserManager.getInstance().setTitle(resourceManager.getString("jhaij", "browerTitle"));
        }
        ]]>
	</fx:Script>

    <fx:Style source="/assets/css/yflexskin.css"/>
    <fx:Style source="/assets/css/styles.css"/>

    <fx:Declarations>
        <!-- 将非可视元素（例如服务、值对象）放在此处 -->
        <controller:ZRController xmlns:controller="com.github.izerui.file.cairngorm.controller.*"/>
        <service:Services xmlns:service="com.github.izerui.file.cairngorm.service.*"/>
    </fx:Declarations>

    <s:VGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
        <controls:HeaderPanel width="80%" height="64"/>
        <controls:FileListPanel id="filegrid" width="80%" height="80%">

        </controls:FileListPanel>
    </s:VGroup>

</s:Application>
